from __future__ import print_function
from __future__ import division
from __future__ import absolute_import

import argparse

import klupung.ktweb

arg_parser = argparse.ArgumentParser(
    description="Download KTWeb meeting documents from given policymaker URLs")

arg_parser.add_argument(
    "policymaker_urls",
    nargs="+",
    metavar="POLICYMAKER_URL",
    help="policymaker URL, e.g. http://www3.jkl.fi/paatokset/rakympltk09.htm")

arg_parser.add_argument(
    "--force",
    action="store_true",
    default=False,
    help="download all documents, even if they already exist")

arg_parser.add_argument(
    "--min-request-interval",
    type=float,
    default=1.0,
    help="minimum HTTP request interval in seconds, default=1.0")

args = arg_parser.parse_args()

for policymaker_url in args.policymaker_urls:
    for meetingdoc_dir in klupung.ktweb.download_policymaker(policymaker_url,
                                                             min_interval=args.min_request_interval,
                                                             force=args.force):
        print(meetingdoc_dir)
