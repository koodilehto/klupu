from __future__ import print_function
from __future__ import division
from __future__ import absolute_import

import argparse

import klupung.ktweb

arg_parser = argparse.ArgumentParser(description="Download KTWeb documents")

arg_parser.add_argument("policymaker_url", metavar="POLICYMAKER_URL",
                        help="policymaker URL, e.g. http://www3.jkl.fi/paatokset/rakympltk09.htm")

args = arg_parser.parse_args()

meeting_document_urls = klupung.ktweb.query_meeting_document_urls(args.policymaker_url)
for meeting_document_url in meeting_document_urls:
    meeting_document_dir = klupung.ktweb.download_meeting_document(meeting_document_url)
    print(meeting_document_dir)
